# Trade Base - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git - it's already in .gitignore

# =============================================================================
# DATABASE
# =============================================================================
# PostgreSQL/TimescaleDB connection string for analytics and trade data
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://tradebase_user:your_secure_password@localhost:5432/tradebase

# Alternative: Separate connection parameters (used by some scripts)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tradebase
DB_USER=tradebase_user
DB_PASSWORD=your_secure_password

# =============================================================================
# NINJATRADER API
# =============================================================================
# NinjaTrader API credentials for live trading connection
NINJATRADER_API_KEY=your_nt_api_key_here
NINJATRADER_API_SECRET=your_nt_api_secret_here
NINJATRADER_HOST=127.0.0.1
NINJATRADER_PORT=3698

# =============================================================================
# DISCORD NOTIFICATIONS
# =============================================================================
# Discord webhook URL for system notifications and alerts
# Create at: https://discord.com/channels/YOUR_SERVER/settings/integrations
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# Optional: Separate webhooks for different severity levels
DISCORD_WEBHOOK_CRITICAL=https://discord.com/api/webhooks/...
DISCORD_WEBHOOK_WARNINGS=https://discord.com/api/webhooks/...

# =============================================================================
# BROKERAGE API (if using direct broker connection)
# =============================================================================
# Interactive Brokers
IB_ACCOUNT_ID=your_account_id
IB_API_KEY=your_ib_api_key

# Alpaca (for crypto or stock testing)
ALPACA_API_KEY=your_alpaca_key
ALPACA_SECRET_KEY=your_alpaca_secret
ALPACA_PAPER=true

# =============================================================================
# MACHINE LEARNING / MLOPS
# =============================================================================
# MLflow tracking server
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_TRACKING_USERNAME=mlflow_user
MLFLOW_TRACKING_PASSWORD=mlflow_password

# AWS S3 (for model artifacts - optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1
S3_BUCKET_NAME=tradebase-ml-models

# MinIO (self-hosted S3 alternative)
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=your_minio_secret
MINIO_ENDPOINT=http://localhost:9000

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
# Grafana
GRAFANA_ADMIN_PASSWORD=your_grafana_admin_password

# Prometheus (if using remote write)
PROMETHEUS_REMOTE_WRITE_URL=https://your-prometheus-instance/api/v1/write
PROMETHEUS_API_KEY=your_prometheus_api_key

# DataDog (optional)
DATADOG_API_KEY=your_datadog_api_key
DATADOG_APP_KEY=your_datadog_app_key

# =============================================================================
# SECURITY
# =============================================================================
# JWT Secret for API authentication
JWT_SECRET_KEY=generate_a_random_32_char_string_here

# Encryption key for sensitive data at rest
ENCRYPTION_KEY=generate_a_random_32_char_string_here

# =============================================================================
# EXTERNAL DATA PROVIDERS
# =============================================================================
# Polygon.io (market data)
POLYGON_API_KEY=your_polygon_api_key

# Twelve Data (alternative market data)
TWELVEDATA_API_KEY=your_twelvedata_key

# CoinMarketCap (crypto data)
CMC_API_KEY=your_coinmarketcap_key

# =============================================================================
# DEVELOPMENT / TESTING
# =============================================================================
# Set to 'true' for paper trading / simulation mode
PAPER_TRADING=true

# Test database (isolated from production data)
TEST_DATABASE_URL=postgresql://tradebase_user:your_secure_password@localhost:5432/tradebase_test

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable specific features
ENABLE_LIVE_TRADING=false
ENABLE_AUTO_IMPROVEMENT=false
ENABLE_NOTIFICATIONS=true
ENABLE_ML_TRAINING=false
